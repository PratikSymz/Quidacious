<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context="com.example.android.quizapp.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_8"
        android:orientation="vertical">

        <TextView
            android:id="@+id/descriptionHeader"
            style="@style/descriptionHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/descriptionTitle" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/descriptionLines"
                    style="@style/descriptionLines"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/quizDescriptionContent1" />

                <TextView
                    android:id="@+id/descriptionLines"
                    style="@style/descriptionLines"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/quizDescriptionContent2"
                    tools:ignore="DuplicateIds" />

                <TextView
                    android:id="@+id/descriptionLines"
                    style="@style/descriptionLines"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/quizDescriptionContent3"
                    tools:ignore="DuplicateIds" />

                <TextView
                    android:id="@+id/descriptionLines"
                    style="@style/descriptionLines"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/quizDescriptionContent4"
                    tools:ignore="DuplicateIds" />

                <TextView
                    android:id="@+id/descriptionLines"
                    style="@style/descriptionLines"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/quizDescriptionContent5"
                    tools:ignore="DuplicateIds" />

                <TextView
                    android:id="@+id/descriptionLines"
                    style="@style/descriptionLines"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/quizDescriptionContent6"
                    tools:ignore="DuplicateIds" />

                <TextView
                    android:id="@+id/descriptionLines"
                    style="@style/descriptionLines"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/quizDescriptionContent7"
                    tools:ignore="DuplicateIds" />

                <TextView
                    android:id="@+id/goodLuck"
                    style="@style/goodLuck"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/goodLuck" />

            </LinearLayout>

        </ScrollView>

        <Button
            android:id="@+id/startButton"
            style="@style/startButton"
            android:layout_width="@dimen/margin_100"
            android:layout_height="@dimen/margin_45"
            android:text="@string/startButton" />

    </LinearLayout>

</RelativeLayout>

